<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubUserApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/darkBackground</item>
        <item name="tabBackground">@color/grey</item>
    </style>

    <style name="TextViewUsername">
        <item name="android:textColor">@color/colorUsernameText</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="TextViewContent">
        <item name="android:textColor">@color/colorTextContent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TextViewContent.TextViewInfo">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
</resources>